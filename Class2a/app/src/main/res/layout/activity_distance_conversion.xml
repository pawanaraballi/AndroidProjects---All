<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mad.pawan.class2.class2a.DistanceConversion"
    android:gravity="center_horizontal">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText_enterdis"
        android:hint="Enter Distance"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result"
        android:id="@+id/textView_result"
        android:layout_below="@+id/editText_enterdis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/meters"
        android:id="@+id/textView_meters"
        android:layout_alignBottom="@+id/editText_enterdis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_finalresult"
        android:layout_alignTop="@+id/textView_result"
        android:layout_alignLeft="@+id/editText_enterdis"
        android:layout_alignStart="@+id/editText_enterdis"
        android:layout_alignBottom="@+id/textView_result" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toinch"
        android:id="@+id/button_inch"
        android:layout_above="@+id/button_feet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tofeet"
        android:id="@+id/button_feet"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_inch"
        android:layout_alignStart="@+id/button_inch" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tomile"
        android:id="@+id/button_mile"
        android:layout_below="@+id/button_feet"
        android:layout_alignLeft="@+id/button_feet"
        android:layout_alignStart="@+id/button_feet"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clearall"
        android:id="@+id/button_cancel"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/button_mile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
